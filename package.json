{
  "name": "neval",
  "version": "0.0.0",
  "description": "A Zero-dependency, lightweight utility for securely evaluating code in a sandboxed environment in Node.js.",
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "license": "MIT",
  "repository": "github:shahradelahi/node-neval",
  "homepage": "https://github.com/shahradelahi/node-neval",
  "keywords": [
    "nodejs",
    "neval",
    "eval",
    "javascript",
    "sandbox"
  ],
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./register": {
      "require": "./dist/register.cjs",
      "import": "./dist/register.js"
    }
  },
  "types": "./dist",
  "files": [
    "dist/**/*",
    "!dist/**/register.d.*"
  ],
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "mocha \"**/*.test.ts\" --retries 2",
    "prepublishOnly": "pnpm test && pnpm lint && pnpm format:check && pnpm build"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@sindresorhus/tsconfig": "^6.0.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "chai": "^5.1.2",
    "eslint": "^9.0.0",
    "mocha": "^10.8.2",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
